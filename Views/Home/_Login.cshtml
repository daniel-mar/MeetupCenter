@model LoginUser

<h3 class="text-center">Login</h3>

<form asp-action="Login" method="post">

    <div class="form-group">
        <label asp-for="LoginEmail">Email</label>
        <input asp-for="LoginEmail" class="form-control" value="d@test.com" />
        <span asp-validation-for="LoginEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword">Password</label>
        <input asp-for="LoginPassword" type="password" class="form-control" value="12345678" />
        <span asp-validation-for="LoginPassword" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Login</button>
</form>